<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize "TYPES.Item.ridingtrick"}}</div>
    <div class='item-element' style="flex: 0 0 120px;">{{localize "SW25.Item.Ridingtrick.Support"}}</div>
    <div class='item-element' style="flex: 0 0 110px;">{{localize "SW25.Item.Ridingtrick.Part"}}</div>
    <div class='item-controls'>
      <a
        class='item-control item-create'
        title='{{localize "DOCUMENT.Create" type='Item'}}'
        data-type='ridingtrick'
      >
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type=''}}
      </a>
    </div>
  </li>
  {{#each ridingtricks as |item id|}}
    <li class='item' data-item-id='{{item._id}}'>
      <div class="flexrow flex-group-center">
        <div class='item-name'>
          <div class='item-image'>
            <a class='rollable' data-roll-type='item'>
              <img
                src='{{item.img}}'
                title='{{item.name}}'
                width='24'
                height='24'
              />
            </a>
          </div>
          {{#if system.constant}}○{{/if}}{{#if system.main}}▶{{/if}}{{#if system.aux}}≫{{/if}}<h4 class="item-label">{{item.name}}</h4>
        </div>
        <div class="rollable" style="flex: 0 0 40px; display: {{#if system.usedice}}block{{else}}none{{/if}};" data-roll="{{item.system.checkformula}}+{{item.system.checkbase}}" data-label="{{item.name}} ({{localize "SW25.Check"}})" data-pt="{{item.system.powertable}}">
          <b>{{localize "SW25.Check"}}</b>
        </div>
        <div class="powerrollable" style="flex: 0 0 40px; display: {{#if system.usepower}}block{{else}}none{{/if}};" data-roll="{{item.system.powerformula}}" data-label="{{item.name}} ({{localize "SW25.Item.Power"}})" data-pt="{{item.system.powertable}}">
          <b>{{localize "SW25.Item.Power"}}</b>
        </div>
        <div class='item-quantity item-prop flexrow flex-group-center' style="flex: 0 0 120px;">
          {{system.support}}
        </div>
        <div class='item-quantity item-prop flexrow flex-group-center' style="flex: 0 0 110px;">
          {{system.rtpart}}
        </div>
        <div class='item-controls'>
          <a
            class='item-control item-edit'
            title='{{localize "DOCUMENT.Update" type='ridingtrick'}}'
          >
            <i class='fas fa-edit'></i>
          </a>
          <a
            class='item-control item-delete'
            title='{{localize "DOCUMENT.Delete" type='ridingtrick'}}'
          >
            <i class='fas fa-trash'></i>
          </a>
        </div>
      </div>
      <div class="item-description nogapmargin">
        <div class="flexrow">
          <div style="flex: 0 0 60px;"></div>
          <div style="font-size: 0.8em;">
            {{{system.description}}}
          </div>
          <div style="flex: 0 0 50px;"></div>
        </div>
      </div>
    </li>
  {{/each}}
</ol>