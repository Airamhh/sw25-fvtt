<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize "TYPES.Item.monsterability"}}</div>
    <div class='item-controls'>
      <a
        class='item-control item-create'
        title='{{localize "DOCUMENT.Create" type='Item'}}'
        data-type='monsterability'
      >
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type=''}}
      </a>
    </div>
  </li>
  {{#each monsterabilities as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name'>
        <div class='item-image'>
          <a class='rollable' data-roll-type='item'>
            <img
              src='{{item.img}}'
              title='{{item.name}}'
              width='24'
              height='24'
            />
          </a>
        </div>
        {{#if item.system.constant}}○{{/if}}{{#if item.system.main}}▶{{/if}}{{#if item.system.aux}}≫{{/if}}{{#if item.system.prep}}△{{/if}}{{#if item.system.decla}}□{{/if}}<h4>{{item.name}}</h4>
      </div>
      <div class="rollable" style="flex: 0 0 auto; margin-left: 10px; display: {{#if system.usedice1}}block{{else}}none{{/if}};" data-roll="{{item.system.checkformula1}}+{{item.system.checkbase1}}" data-label="{{item.name}} ({{item.system.label1}})" data-pt="{{item.system.powertable}}">
        <b>{{item.system.label1}}:{{item.system.checkbase1}}({{item.system.checkbasefix1}})</b>
      </div>
      <div class="rollable" style="flex: 0 0 auto; margin-left: 10px; display: {{#if system.usedice2}}block{{else}}none{{/if}};" data-roll="{{item.system.checkformula2}}+{{item.system.checkbase2}}" data-label="{{item.name}} ({{item.system.label2}})" data-pt="{{item.system.powertable}}">
        <b>{{item.system.label2}}:{{item.system.checkbase2}}({{item.system.checkbasefix2}})</b>
      </div>
      <div class="rollable" style="flex: 0 0 auto; margin-left: 10px; display: {{#if system.usedice3}}block{{else}}none{{/if}};" data-roll="{{item.system.checkformula3}}+{{item.system.checkbase3}}" data-label="{{item.name}} ({{item.system.label3}})" data-pt="{{item.system.powertable}}">
        <b>{{item.system.label3}}:{{item.system.checkbase3}}({{item.system.checkbasefix3}})</b>
      </div>
      <div class="powerrollable" style="flex: 0 0 auto; margin-left: 10px; display: {{#if system.usepower}}block{{else}}none{{/if}};" data-roll="{{item.system.powerformula}}" data-label="{{item.name}} ({{item.system.labelmonpow}})" data-pt="{{item.system.powertable}}">
        <b>{{item.system.labelmonpow}}:k{{item.system.power}}@{{item.system.cvalue}}+{{item.system.powerbase}}</b>
      </div>
      <div style="flex: 0 0 auto; margin-left: 10px; display: {{#if system.remark}}block{{else}}none{{/if}};"><b>{{item.system.remark}}</b></div>
      <div class='item-controls'>
        <a
          class='item-control item-edit'
          title='{{localize "DOCUMENT.Update" type='monsterability'}}'
        >
          <i class='fas fa-edit'></i>
        </a>
        <a
          class='item-control item-delete'
          title='{{localize "DOCUMENT.Delete" type='monsterability'}}'
        >
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
  {{/each}}
</ol>