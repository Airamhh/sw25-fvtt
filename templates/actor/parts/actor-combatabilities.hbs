<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize "TYPES.Item.combatability"}}</div>
    <div class='item-element' style="flex: 1 0 0;">{{localize "SW25.Item.Combatability.App"}} / {{localize "SW25.Item.Combatability.Risk"}}</div>
    <div class='item-element' style="flex: 0 0 70px;">{{localize "SW25.Item.Combatability.Type"}}</div>
    <div class='item-controls'>
      <a
        class='item-control item-create'
        title='{{localize "DOCUMENT.Create" type='Item'}}'
        data-type='combatability'
      >
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type=''}}
      </a>
    </div>
  </li>
  {{#each combatabilities as |item id|}}
    <li class='item' data-item-id='{{item._id}}'>
      <div class="flexrow flex-group-center">
        <div class='item-name'>
          <div class='item-image'>
            <a class='rollable' data-roll-type='item'>
              <img
                src='{{item.img}}'
                title='{{item.name}}'
                width='24'
                height='24'
              />
            </a>
          </div>
          {{#if system.prep}}â–³{{/if}}<h4 class="item-label">{{item.name}}</h4>{{#if system.secret}} ({{system.school}}){{/if}}
        </div>
        <div class="rollable" style="flex: 0 0 40px; display: {{#if system.usedice}}block{{else}}none{{/if}};" data-roll="{{item.system.checkformula}}+{{item.system.checkbase}}" data-label="{{item.name}} ({{localize "SW25.Check"}})" data-pt="{{item.system.powertable}}">
          <b>{{localize "SW25.Check"}}</b>
        </div>
        <div class="powerrollable" style="flex: 0 0 40px; display: {{#if system.usepower}}block{{else}}none{{/if}};" data-roll="{{item.system.powerformula}}" data-label="{{item.name}} ({{localize "SW25.Item.Power"}})" data-pt="{{item.system.powertable}}">
          <b>{{localize "SW25.Item.Power"}}</b>
        </div>
        <div class='item-quantity item-prop flexrow flex-group-center' style="flex: 1 0 0;">
          {{system.app}} / {{system.risk}}
        </div>
        <div class='item-quantity item-prop flexrow flex-group-center' style="flex: 0 0 70px;">
          {{system.typename}}
        </div>
        <div class='item-controls'>
          <a
            class='item-control item-edit'
            title='{{localize "DOCUMENT.Update" type='combatability'}}'
          >
            <i class='fas fa-edit'></i>
          </a>
          <a
            class='item-control item-delete'
            title='{{localize "DOCUMENT.Delete" type='combatability'}}'
          >
            <i class='fas fa-trash'></i>
          </a>
        </div>
      </div>
      <div class="item-description nogapmargin">
        <div class="flexrow">
          <div style="flex: 0 0 60px;"></div>
          <div style="font-size: 0.8em;">
            {{{system.description}}}
          </div>
          <div style="flex: 0 0 50px;"></div>
        </div>
      </div>
    </li>
  {{/each}}
</ol>