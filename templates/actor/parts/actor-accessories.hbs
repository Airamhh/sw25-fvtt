<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-element' style="flex: 0 0 40px;">{{localize "SW25.Item.Equip"}}</div>
    <div class='item-name'>{{localize "TYPES.Item.accessory"}}</div>
    <div class='item-element' style="flex: 0 0 80px;">{{localize "SW25.Item.Accessory.Part"}}</div>
    <div class='item-quantity item-element' style="flex: 0 0 70px;">{{localize "SW25.Quantity"}}</div>
    <div class='item-controls'>
      <a
        class='item-control item-create'
        title='{{localize "DOCUMENT.Create" type='Accessory'}}'
        data-type='accessory'
      >
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type=''}}
      </a>
    </div>
  </li>
  {{#each accessories as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class="flex-group-center" style="flex: 0 0 40px;">
        <input class="eq-change" type="checkbox" name="system.equip" data-dtype="Boolean" {{#if system.equip}} checked {{/if}}/>
      </div>
      <div class='item-name'>
        <div class='item-image'>
          <a class='rollable' data-roll-type='item'>
            <img
              src='{{item.img}}'
              title='{{item.name}}'
              width='24'
              height='24'
            />
          </a>
        </div>
        <h4>{{item.name}}</h4>{{#if item.system.dedicated}} ({{localize "SW25.Item.Dedicated"}}{{item.system.deffectname}}){{/if}}
      </div>
      <div style="text-align: center; flex: 0 0 80px;">
        {{item.system.accpartname}}
      </div>
      <div class='item-quantity item-prop flexrow flex-group-center' style="flex: 0 0 70px;">
        <a class="quantity-button" data-action="decrease" data-property="item.system.quantity">
          <i class="fas fa-minus"></i>
        </a>
        <input class="qt-change" type="text" name="quantityInput" value="{{item.system.quantity}}" data-dtype="Number"/>
        <a class="quantity-button" data-action="increase" data-property="item.system.quantity">
          <i class="fas fa-plus"></i>
        </a>
      </div>
      <div class='item-controls'>
        <a
          class='item-control item-edit'
          title='{{localize "DOCUMENT.Update" type='accessory'}}'
        >
          <i class='fas fa-edit'></i>
        </a>
        <a
          class='item-control item-delete'
          title='{{localize "DOCUMENT.Delete" type='accessory'}}'
        >
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
  {{/each}}
</ol>