<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize "TYPES.Item.weapon"}} ({{localize "SW25.Item.Equip"}})</div>
    <div class='item-element' style="flex: 0 0 120px;">{{localize "SW25.Skillname"}}</div>
    <div class='item-element' style="flex: 0 0 30px;">{{localize "SW25.Item.Weapon.Hit"}}</div>
    <div class='item-element' style="flex: 0 0 90px;">{{localize "SW25.Item.Power"}}</div>
    <div class='item-element' style="flex: 0 0 70px;">{{localize "SW25.Item.Weapon.Range"}}</div>
  </li>
  {{#each battleweapons as |item id|}}
    <li class='item' data-item-id='{{item._id}}'>
      <div class="flexrow flex-group-center">
        <div class='item-name'>
          <div class='item-image'>
            <a class='rollable' data-roll-type='item'>
              <img
                src='{{item.img}}'
                title='{{item.name}}'
                width='24'
                height='24'
              />
            </a>
          </div>
          <h4 class="item-label">{{item.name}}{{#if item.system.dedicated}} ({{localize "SW25.Item.Dedicated"}}){{/if}}</h4>
        </div>
        <div class='item-quantity item-prop flexrow flex-group-center' style="flex: 0 0 120px;">
          {{item.system.showskill}}
        </div>
        <div class='rollable item-quantity item-prop flexrow flex-group-center' style="flex: 0 0 30px;" data-roll="{{item.system.checkformula}}+{{item.system.checkbase}}" data-label="{{item.name}} ({{localize "SW25.Item.Weapon.Hit"}})" data-pt="{{item.system.powertable}}" data-apply="{{system.applycheck}}">
          {{item.system.checkbase}}
        </div>
        <div class='powerrollable item-quantity item-prop flexrow flex-group-center' style="flex: 0 0 90px;" data-roll="{{item.system.powerformula}}" data-label="{{item.name}} ({{localize "SW25.Item.Power"}})" data-pt="{{item.system.powertable}}" data-apply="{{system.applypower}}">
          k{{system.power}}{{#if system.cvalue}}@{{system.cvalue}}{{/if}}{{#if system.powerbase}}+{{system.powerbase}}{{/if}}
        </div>
        <div class='item-quantity item-prop flexrow flex-group-center' style="flex: 0 0 70px;">
          {{item.system.range}}
        </div>
      </div>
      <div class="item-description nogapmargin">
        <div class="flexrow">
          <div style="flex: 0 0 60px;"></div>
          <div style="font-size: 0.8em;">
            {{{system.description}}}
          </div>
          <div class='item-controls' style="flex: 0 0 50px;">
            <a
              class='item-control item-edit'
              title='{{localize "DOCUMENT.Update" type='Item'}}'
            >
              <i class='fas fa-edit'></i>
            </a>
            <a
              class='item-control item-delete'
              title='{{localize "DOCUMENT.Delete" type='Item'}}'
            >
              <i class='fas fa-trash'></i>
            </a>
          </div>
        </div>
      </div>
    </li>
  {{/each}}
</ol>